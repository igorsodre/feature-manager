@page "Details"
@model Rollout.UI.Areas.Rollout.Pages.Details
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" rel="stylesheet">
        <link rel="stylesheet" href="~/_content/Rollout.UI/style.css" />

        <title>Add/Edit Feature</title>
    </head>
    <body>
        <div class="content">
            <div class="container">
                <div class="wrapper wrapper--w900">
                    <div class="card card-6">
                        <div class="card-heading mt-">
                            <h2 class="title">Feature details</h2>
                        </div>
                        <div class="card-body">
                            <form method="POST">

                                <div class="form-row">
                                    <div class="name">Feature Name</div>
                                    <div class="value">
                                        <input class="input--style-6" type="text" name="feature-name" value="@Model.Feature.Name" />
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="name">Percentage</div>
                                    <div class="value">
                                        <div class="input-group">
                                            <input class="input--style-6" type="number" min="0" max="100" name="Percentage" placeholder="15%" value="@Model.Feature.Percentage" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="name">Users</div>
                                    <div class="value">
                                        <div class="input-group">
                                            <textarea
                          class="textarea--style-6"
                          name="users"
                          placeholder="list of semicolon separated values. eg: user1;user2;user3"
                          >@string.Join(";", Model.Feature.Users)</textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="name">Groups</div>
                                    <div class="value">
                                        <div class="input-group">
                                            <textarea
                        class="textarea--style-6"
                        name="groups"
                        placeholder="list of semicolon separated values. eg: group1;group2;group3"
                        >@string.Join(";", Model.Feature.Groups)</textarea>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn--radius-2 btn--blue-2 m-r-45" type="submit">Save</button>
                            <a asp-area="Rollout" asp-page="/Index" class="btn btn--radius-2 btn--grey" type="submit">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
